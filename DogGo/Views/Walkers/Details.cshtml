@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Profile";
}
<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg" />
        <div>
           <div>
                Name : @Model.Walker.Name
           </div> 
            Neighborhood: @Model.Walker.Neighborhood.Name
        </div>
        
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Walks</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                               Client
                            </th>
                            <th>
                               Duration
                            </th>                           
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (Walk walk in Model.Walks)
                        {
                            <tr>
                                <td>
                                    @walk.Date
                                </td>
                                <td>
                                    @walk.OwnerName
                                </td>
                                <td>
                                    @(walk.Duration/60) Minutes
                                </td>
                             </tr>
                        }
                    </tbody>
                </table>
    
        </section>

        <section class="col-lg-4 col-md-8 container mt-5">
            <h1>Total Walk Time: @(Model.TotalWalkTime/60) Minutes</h1>
        </section>
    </div>
</div>